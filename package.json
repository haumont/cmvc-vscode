{
  "name": "cmvc-source-control",
  "displayName": "CMVC Source Control",
  "description": "A source control extension for CMVC with Git-like interface",
  "version": "0.0.1",
  "author": {
    "name": "Jeff Haumont",
    "email": "haumont@acm.org"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/haumont/cmvc-vscode.git"
  },
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "SCM Providers"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "cmvc.setFamily",
        "title": "Set Family",
        "category": "CMVC"
      },
      {
        "command": "cmvc.setRelease",
        "title": "Set Release",
        "category": "CMVC"
      },
      {
        "command": "cmvc.setDefect",
        "title": "Set Defect",
        "category": "CMVC"
      },
      {
        "command": "cmvc.checkin",
        "title": "Checkin",
        "category": "CMVC"
      },
      {
        "command": "cmvc.checkout",
        "title": "Checkout",
        "category": "CMVC"
      },
      {
        "command": "cmvc.view",
        "title": "View",
        "category": "CMVC"
      },
      {
        "command": "cmvc.checkinFile",
        "title": "Checkin File",
        "category": "CMVC"
      },
      {
        "command": "cmvc.checkoutFile",
        "title": "Checkout File",
        "category": "CMVC"
      },
      {
        "command": "cmvc.viewFile",
        "title": "View File",
        "category": "CMVC"
      },
      {
        "command": "cmvc.checkinInline",
        "title": "↑",
        "category": "CMVC"
      },
      {
        "command": "cmvc.checkoutInline",
        "title": "↓",
        "category": "CMVC"
      },
      {
        "command": "cmvc.viewInline",
        "title": "V",
        "category": "CMVC"
      },
      {
        "command": "cmvc.create",
        "title": "Create",
        "category": "CMVC"
      }
    ],

    "viewsContainers": {
      "activitybar": [
        {
          "id": "cmvc",
          "title": "CMVC",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "cmvc": [
        {
          "id": "cmvcConfig",
          "name": "Configuration",
          "when": "true"
        },
        {
          "id": "cmvcFiles",
          "name": "Files",
          "when": "true"
        },
        {
          "id": "cmvcTrack",
          "name": "Track",
          "when": "true"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "cmvc.setFamily",
          "when": "view == cmvcExplorer",
          "group": "navigation"
        },
        {
          "command": "cmvc.setRelease",
          "when": "view == cmvcExplorer",
          "group": "navigation"
        },
        {
          "command": "cmvc.setDefect",
          "when": "view == cmvcExplorer",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "cmvc.create",
          "when": "view == cmvcFiles && viewItem == file",
          "group": "0_create"
        },
        {
          "command": "cmvc.checkin",
          "when": "view == cmvcFiles && viewItem == file",
          "group": "1_modification"
        },
        {
          "command": "cmvc.checkout",
          "when": "view == cmvcFiles && viewItem == file",
          "group": "1_modification"
        },
        {
          "command": "cmvc.view",
          "when": "view == cmvcFiles && viewItem == file",
          "group": "1_modification"
        },
        {
          "command": "cmvc.checkinInline",
          "when": "view == cmvcFiles && viewItem == file",
          "group": "inline"
        },
        {
          "command": "cmvc.checkoutInline",
          "when": "view == cmvcFiles && viewItem == file",
          "group": "inline"
        },
        {
          "command": "cmvc.viewInline",
          "when": "view == cmvcFiles && viewItem == file",
          "group": "inline"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.80.0",
    "@types/node": "16.x",
    "typescript": "^4.9.4"
  }
} 
